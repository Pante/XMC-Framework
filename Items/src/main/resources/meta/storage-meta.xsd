<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace = "karus-commons"
           xmlns = "karus-commons"
>
    
    <xs:include schemaLocation = "./item-meta.xsd"/>
    
    <xs:element name = "storage-meta" type = "storageType"/>
    
    <xs:complexType name = "storageType">
        <xs:complexContent>
            <xs:extension base = "itemType">
                <xs:sequence>
                    
                    <xs:element name = "stored" type = "enchantmentsType" minOccurs = "0" maxOccurs = "1"/>
                    
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    
</xs:schema>
