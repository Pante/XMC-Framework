<xs:schema version = "1.0"
           xmlns:xs = "http://www.w3.org/2001/XMLSchema"
           targetNamespace = "karus-commons"
           xmlns = "karus-commons"
>
    
    <xs:element name = "item-meta" type = "itemType">
    
        
    <xs:complexType name = "itemType">
            <xs:sequence>
                
                <xs:element name = "enchantments" type = "enchantmentsType" minOccurs = "0" maxOccurs = "1">
                
                <xs:element name = "description" minOccurs = "0" maxOccurs = "1">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name = "line" type = "xs:string" minOccurs = "1" maxOccurs = "unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                
                <xs:element name = "flags" minOccurs = "0" maxOccurs = "1">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name = "flag" type = "xs:string" minOccurs = "1" maxOccurs = "unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                
            </xs:sequence>
            <xs:attribute name = "display-name" type = "xs:string"/>
        </xs:complexType>
    </xs:element>
    
    
    <xs:complexType name = "enchantmentsType">
        <xs:sequence>
            <xs:element name = "enchantment" minOccurs = "1" maxOccurs = "unbounded">
                <xs:complexType>
                    <xs:attribute name = "type" type = "xs:string" use = "required"/>
                    <xs:attribute name = "level" type = "xs:positiveInteger" use = "required"/>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    
</xs:schema>
