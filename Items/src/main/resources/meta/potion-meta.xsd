<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace = "karus-commons"
           xmlns = "karus-commons"
>
    
    <xs:include schemaLocation = "./item-meta.xsd"/>
    
    <xs:element name = "potion-meta" type = "potionType"/>
    
    <xs:complexType name = "potionType">
        <xs:complexContent>
            <xs:extension base = "itemType">
                <xs:sequence>
                    
                    <xs:element name = "effects" minOccurs = "0" maxOccurs = "1">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name = "effect">
                                    <xs:complexType>
                                        <xs:attribute name = "type" type = "xs:string" use = "requireed"/>
                                        <xs:attribute name = "duration" type = "x:nonPositiveInteger" use = "requireed"/>
                                        <xs:attribute name = "level" type = "xs:positiveInteger" use = "requireed"/>
                                        <xs:attribute name = "ambient" type = "xs:boolean" default = "false"/>
                                        <xs:attribute name = "particles" type = "xs:boolean" default = "true"/>
                                    </xs:complexType>
                                </xs:element>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                    
                </xs:sequence>
                <xs:attribute name = "color" type = "xs:string" default = "ORANGE"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    
</xs:schema>
